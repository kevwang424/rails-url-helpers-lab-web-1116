<h1>Activate/Deactivate student</h1>

<h4><%=@student.to_s%></h4>
<form action="<%=student_path(@student)%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <label>Active</label><input type="checkbox" name="student[active]" value="true" <%='checked' if @student.active == true%>>
  <label>Deactive</label><input type="checkbox" name="student[active]" value="false" <%='checked' if @student.active == false%>>
  <input type="submit" value="submit">
</form>
